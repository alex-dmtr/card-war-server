<div class="container">
  <div class="well">
    <% if (success.length > 0) { %>
      <div class="alert alert-success">
        <strong>Success!</strong>
        <%= success %>
      </div>
    <% } %>

    <% if (error.length > 0) { %>
      <div class="alert alert-danger">
        <strong>Error!</strong>
        <%= error %>
      </div>
    <% } %>

    <% if (info.length > 0) { %>
      <div class="alert alert-info">
        <strong>Info</strong>
          <%= info %>
      </div>
    <% }%>
  </div>
</div>